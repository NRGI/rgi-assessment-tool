div(ng-if="assessment.assignment_date")
    span.assessment-milestone-name Assigned
    span.assessment-milestone-date {{assessment.assignment_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}
div(ng-if="assessment.researcher_start_date && (current_user.isResearcher() || current_user.isSupervisor())")
    span(ng-if="current_user.isSupervisor()").assessment-milestone-name Started by Researcher
    span(ng-if="current_user.isResearcher()").assessment-milestone-name Started
    span.assessment-milestone-date {{assessment.researcher_start_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}
div(ng-if="assessment.researcher_submit_date && (current_user.isResearcher() || current_user.isSupervisor())")
    span(ng-if="current_user.isSupervisor()").assessment-milestone-name Submitted by Researcher
    span(ng-if="current_user.isResearcher()").assessment-milestone-name Submitted
    span.assessment-milestone-date {{assessment.researcher_submit_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}
div(ng-if="assessment.reviewer_start_date && (current_user.isReviewer() || current_user.isSupervisor())")
    span(ng-if="current_user.isSupervisor()").assessment-milestone-name Started by Reviewer
    span(ng-if="current_user.isReviewer()").assessment-milestone-name Started
    span.assessment-milestone-date {{assessment.reviewer_start_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}
div(ng-if="assessment.reviewer_submit_date && (current_user.isReviewer() || current_user.isSupervisor())")
    span(ng-if="current_user.isSupervisor()").assessment-milestone-name Submitted by Reviewer
    span(ng-if="current_user.isReviewer()").assessment-milestone-name Submitted
    span.assessment-milestone-date {{assessment.reviewer_submit_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}
div(ng-if="assessment.last_review_date")
    span.assessment-milestone-name Reviewed
    span.assessment-milestone-date {{assessment.last_review_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}
div(ng-if="assessment.approval_date")
    span.assessment-milestone-name Approved
    span.assessment-milestone-date {{assessment.approval_date.date | date:'MM/dd/yyyy @ h:mma' : timezone}}