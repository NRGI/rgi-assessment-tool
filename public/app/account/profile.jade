.container.top-padding-med
	.well.left-padding-lg
		div.left-padding-lg.right-padding-lg.top-padding-med
			form.form-horizontal(name='profileForm')
				fieldset.left-padding-lg.right-padding-lg
					//- Profile page
					legend.h3 {{fullName}}'s {{role | capitalize}} Profile
					.row.right-padding-lg.top-padding-med
						.form-group
							label.col-md-2.control-label(form="first_name") First Name
							.col-md-4
								input.form-control(
								name="first_name"
								type="text"
								placeholder="First Name"
								ng-model="first_name"
								required)
							label.col-md-2.control-label(form="last_name") Last Name
							.col-md-4
								input.form-control(
								name="last_name"
								type="text"
								placeholder="Last Name"
								ng-model="last_name"
								required)
					.row.right-padding-lg
						.form-group
							label.col-md-2.control-label(form="username") Username
							.col-md-4
								input.form-control(
								name="username"
								type="text"
								placeholder="Username"
								ng-model="username"
								readonly)
							label.col-md-2.control-label(form="email") Email
							.col-md-4
								input.form-control(
								name="email"
								type="email"
								placeholder="Email"
								ng-model="email"
								required)
					.row.right-padding-lg
						.form-group
							label.col-md-2.control-label(form="password") Password
							.col-md-4
								input.form-control(
								name="password"
								type="password"
								ng-model="password")
							label.col-md-2.control-label(form="address") Address
							.col-md-4
								input.form-control(
								name="address"
								type="address"
								placeholder="Address"
								ng-model="address")
					.row.right-padding-lg
						.form-group
							label.col-md-2.control-label(form="password") Repeat Password
							.col-md-4
								input.form-control(
								name="password"
								type="password"
								ng-model="password_rep")


					.form-group.right-padding-lg
						.col-md-10.col-md-offset-2
							.pull-right
								button.btn.btn-primary(
								ng-click="update()"
								ng-disabled="signupFormm.$invalid || (password && !password_rep) || (password !== password_rep)") Submit
								| &nbsp;
								a.btn.btn-default(href="/") Cancel
