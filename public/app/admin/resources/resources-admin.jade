.container-fluid.page-container
    .well
        div.page-well
            legend.h3.page-header {{title}}
            div.bottom-padding-med: button.btn.btn-success(ng-click="newResourceDialog()") Create new block
            div.left-padding-med.right-padding-med
                div.panel.panel-primary(ng-repeat="resource in resources | orderObjectBy:resource.order")
                    div.panel-heading.bottom-padding-med
                        .panel-title
                            div(
                            role="button"
                            data-toggle="collapse"
                            href="#{{resource._id}}")
                                | {{resource.head}} - {{resource.order}}
                    div.panel-collapse.collapse(id="{{resource._id}}")
                        div.panel-body
                            div.right-padding-med.left-padding-med.bottom-padding-lg
                                .row-fluid
                                    label.col-md-1.control-label(form="order")
                                        text(ng-if="title==='Other Resources'") Resource order
                                        text(ng-if="title==='Frequently Asked Questions'") FAQ order
                                    .col-md-1
                                        input.form-group.form-control(
                                        name="order"
                                        type="number"
                                        ng-model="resource.order")

                                    label.col-md-1.control-label(form="title")
                                        text(ng-if="title==='Other Resources'") Resource title
                                        text(ng-if="title==='Frequently Asked Questions'") FAQ title
                                    .col-md-8
                                        input.form-group.form-control(
                                        name="label"
                                        ng-model="resource.head")
                                .row-fluid
                                    label Content
                                    .form-group.left-padding-lg.right-padding-lg(required)
                                        div(
                                        name="content_text"
                                        text-angular-name="content_text"
                                        ng-model="resource.body"
                                        text-angular)

                                .row-fluid.top-padding-med.right-padding-lg
                                    div.pull-right
                                        button.btn.btn-success(ng-click='resourceUpdate(resource)') Save
                                        | &nbsp;
                                        button.btn.btn-danger(ng-click='deleteConfirmDialog(resource)') Delete