.container.top-padding-med
	.well.left-padding-lg.right-padding-lg
		form.form-horizontal(name='createUserForm')
			fieldset.left-padding-lg.right-padding-lg
				legend.h3 New User Information
				div
					.form-group
						label.col-md-2.control-label(form="first_name") First Name *
						.col-md-10
							input.form-control(
							name="first_name"
							type="text"
							placeholder="First Name"
							ng-model="first_name"
							required)
					.form-group
						label.col-md-2.control-label(form="last_name") Last Name *
						.col-md-10
							input.form-control(
							name="last_name"
							type="text"
							placeholder="Last Name"
							ng-model="last_name"
							required)
					.form-group
						label.col-md-2.control-label(form="username") Username *
						.col-md-10
							input.form-control(
							name="username"
							type="text"
							placeholder="Username"
							ng-model="username"
							required)
					.form-group
						label.col-md-2.control-label(form="email") Email *
						.col-md-10
							input.form-control(name="email"
							type="email"
							placeholder="Email"
							ng-model="email"
							required)
					.form-group
						label.col-md-2.control-label(form="password") Password *
						.col-md-10
							input.form-control(name="password"
							type="password"
							placeholder="Password"
							ng-model="password"
							required)
					.form-group
						label.col-md-2.control-label(form="password_repeat") Password repeat *
						.col-md-10
							input.form-control(name="password_repeat"
							type="password"
							placeholder="Retype password"
							ng-model="password_repeat"
							required)
					.form-group
						label.col-md-2.control-label(form="role") Role *
						.col-md-10
							select.form-control(
							ng-model="roleSelect"
							ng-options="item.value as item.text for item in role_options"
							required)
					.form-group
						label.col-md-2.control-label(form="address") Address
						.col-md-10
							input.form-control(
							name="address"
							type="text"
							placeholder="Address"
							ng-model="address")
					//.form-group
					//	label.col-md-2.control-label(form="language") Preferred Language
					//	.col-md-10
					//		input.form-control(name="language", type="text", placeholder="Language", ng-model="language")

					.form-group
						.col-md-10.col-md-offset-2
							.pull-right
								button.btn.btn-primary(
								ng-click="userCreate()"
								ng-disabled="createUserForm.$invalid") Submit
								| &nbsp;
								a.btn.btn-default(href="/") Cancel
