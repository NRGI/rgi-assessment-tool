.container.top-padding-med
	.well
		legend Questions
		.pull-left
			.btn.btn-success(ng-click="newQuestionDialog()", ng-disabled="true", tooltip="yes") New Question
			| &nbsp;
			.btn.btn-default(ng-click="", ng-disabled="true") Export as CSV
		.pull-right
			form.form-inline
				.form-group
					input.form-control(ng-model="searchText", placeholder="Filter")
				.form-group.margin-left-med
					select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
		table.table.table-hover.table-striped.table-condensed
			thead
				tr
					th Question Number
					th Question Text
					th Component
					th
				tbody
					tr(ng-repeat="question in questions | filter:searchText | orderBy:sortOrder")
						td{{question.question_order}}
						td{{question.question_text}}
						td{{question.component_text}}
						td
							a.btn.center-block.btn-default(href="/admin/question-admin-view/{{question._id}}") View
						td
							a.btn.center-block.btn-default(href="/admin/question-admin-edit/{{question._id}}") Edit
