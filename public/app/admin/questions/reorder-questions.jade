.container-fluid.page-container
    .well
        .page-well
            legend.h3.page-header Reorder Questions
            #questions_div.bottom-padding-med(data-ng-model="precepts")
                .panel.panel-default
                    .panel-heading.bottom-padding-med
                        button.btn.btn-success(ng-click="") Reorder / Regroup
                .panel.panel-primary(ng-repeat="precept in precepts track by precept.id", ng-if="precept.data.length > 0")
                    .panel-heading.bottom-padding-med
                        .panel-title
                            div(role="button", data-toggle="collapse", href="#{{::precept.id}}") {{::precept.label}}
                    .panel-collapse.collapse(id="{{::precept.id}}", data-columnindex="{{$index}}")
                        .panel-body
                            .container-fluid
                                .row.header-block
                                    .col-md-1 Number
                                    .col-md-1 Label
                                    .col-md-1 Version
                                    .col-md-5 Question Text
                                    .col-md-3 Component
                                    .col-md-1 Type
                                div(data-as-sortable="sortableOptions", data-ng-model="questions")
                                    .sortable-item(ng-repeat="question in precept.data track by question.question_order", data-as-sortable-item)
                                        .row(data-as-sortable-item-handle)
                                            .col-md-1 {{question.question_order}}
                                            .col-md-1 {{::question.question_label}}
                                            .col-md-1 {{::question.question_v}}
                                            .col-md-5 {{::question.question_text}}
                                            .col-md-3 {{::question.component_text}}
                                            .col-md-1 {{::question.question_type}}