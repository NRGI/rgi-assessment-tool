.container.top-padding-med
	.well
		form.form-horizontal(name='profileForm')
			fieldset
				legend Question {{question.question_order}}. {{question.question_text}}
				.form-group
					label.col-md-2.control-label(form="order") Question Order
					.col-md-1
						input.form-control(name="order", type="text", ng-model="question.question_order", required)
					label.col-md-2.control-label(form="component") Component
					.col-md-7
						input.form-control(name="component", type="text", ng-model="question.component", required)
				.row
					.col-md-2
						b
							p.text-right Option Value
					.col-md-10
						b
							p Option Text
				.row
					.form-group(ng-repeat="choice in question.question_choices")
						.col-md-1
						.col-md-1
							input.form-control(name="choiceOrder", type="text", ng-model="choice.order", required)
						//- label.col-md-2.control-label(form="choice") {{choice.order}}
						//- input.form-control(form="choiceOrder") {{choice.order}}
						.col-md-10
							textarea.form-control(name="choice", type="textbox", ng-model="choice.criteria", required)
					.form-group
						.col-md-10.col-md-offset-2
							.pull-left
								button.btn.btn-success(ng-click="questionOptionAdd()") Add Option
							.pull-right
								button.btn.btn-primary(ng-click="questionUpdate()", ng-disabled="") Submit
								| &nbsp;
								button.btn.btn-danger(ng-click="questionDelete()", ng-disabled="true") Delete
								| &nbsp;
								a.btn.btn-default(href="/") Cancel
