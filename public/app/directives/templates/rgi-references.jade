legend References
    text(ng-if="!current_user.isExternalReviewer() && !current_user.isSupervisor()")  (required):
.bottom-padding-med(
    ng-if="(current_user._id===assessment.edit_control && !(['resubmitted', 'submitted'].indexOf(assessment.status) > -1)) || current_user.isExternalReviewer()"
    id="biblio_div")
    .row
        .col-md-5.pull-left.top-padding-med
            select.form-group.form-control.pull-left(
            ng-model="selected.value"
            ng-change="selectRefDialog(selected.value)"
            ng-disabled="(assessment.edit_control!==current_user._id && !current_user.isExternalReviewer()) || assessment.status === 'submitted' || assessment.status === 'trial_submitted'")
                option(
                value="none"
                selected
                disabled) Select action
                option(
                ng-repeat="ref in ref_type"
                value="{{ref.value}}") {{ref.text}}

//- BILBLIO LIST
div(id="prev_bib" ng-if="!isReferenceListEmpty()")
    .row.left-padding-lg.right-padding-lg
        h4 Citations
        .row.left-padding-lg.bottom-padding-med(ng-repeat="ref in references", ng-if="!ref.hidden")
            div(ng-include="'/partials/directives/templates/partials/reference'")