div.table-responsive
    .row.pull-left.left-padding-lg.right-padding-lg
        // TODO add new question function
        button.btn.btn-success.popover-dialog(popover="Feature coming" popover-trigger="mouseenter" ng-click="") New Question
        //button.btn.btn-success(ng-click="newQuestionDialog()" disabled) New Question
        | &nbsp;
        button.btn.btn-default(ng-csv="getArray" filename="question_set.csv") Export as CSV
    .pull-right.filter-form
        form.form-inline
            .form-group
                input.form-control(
                ng-model="search_text"
                placeholder="Filter")
            .form-group.margin-left-med
                select.form-control(
                ng-model="sort_order"
                ng-options="item.value as item.text for item in sort_options")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th.col-md-1 Question Number
                th Question Text
                th.col-md-2 Component
                th
            tbody
                tr(ng-repeat="question in questions | filter:search_text | orderBy:sort_order")
                    td {{question.question_order}}
                    td {{question.question_text}}
                    td {{question.component_text}}
                    td
                        a.btn.center-block.btn-warning(href="/admin/question-admin-edit/{{question._id}}") Edit