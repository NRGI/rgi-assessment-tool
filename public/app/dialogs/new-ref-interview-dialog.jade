div.left-padding-lg.right-padding-lg
    h2 New interview reference
    .row(id="new_human_form")
        .form-horizontal
            fieldset
                // EXISTING INTERVIEWEE
                //TODO ALLOW USER TO SELECT FROM EXISTING REFERENCE SET
                //div.row.form-group.col-lg-11
                //    label Existing interviewee
                //    select.form-group.form-control.pull-left(ng-model="existing_ref")
                //        option(ng-repeat="ref in existing_ref" value="{{ref.value}}") {{ref.text}}
                // NEW INTERVIEWEE
                h4 New interviewee
                div.left-padding-lg.right-padding-lg
                    div.row.form-group
                        input.form-control(
                        name="first_name"
                        type="text"
                        placeholder="First name (required)..."
                        ng-model="answer.human_ref_first_name"
                        autocomplete="off"
                        required)
                    div.row.form-group
                        input.form-control(
                        name="last_name"
                        type="text"
                        placeholder="Last name (required)..."
                        ng-model="answer.human_ref_last_name"
                        autocomplete="off"
                        required)
                    div.row.form-group
                        input.form-control(
                        name="email"
                        type="text"
                        placeholder="Email address (required)..."
                        ng-model="answer.human_ref_email"
                        autocomplete="off"
                        required)
                    div.row.form-group
                        input.form-control(
                        name="phone"
                        type="text"
                        placeholder="Phone number (required)..."
                        ng-model="answer.human_ref_phone"
                        autocomplete="off"
                        required)
                    div.row.form-group
                        input.form-control(
                        name="comment"
                        type="text"
                        placeholder="Comments..."
                        ng-model="answer.human_ref_comment"
                        autocomplete="off")
                    div.row.form-group
                        datepicker(
                        date-format="{{date_format}}")
                            input.form-control(
                            ng-model="answer.human_ref_contact_date"
                            type="text"
                            placeholder="Date interviewed...")
                //- BUTTON CONTROL
                div.col-lg-6
                    button.btn.btn-block.btn-success(
                    ng-click="webRefSubmit()"
                    ng-disabled="!answer.web_ref_title || !answer.web_ref_url"
                    ) Create reference
                div.col-lg-6
                    button.btn.btn-block.btn-danger(ng-click="closeDialog()") Cancel
