div.left-padding-lg.right-padding-lg(draggable-dialog)
    div.modal-header
        h3 Please add text describing flag.
    div.modal-body
        .form-horizontal
            fieldset
                .row
                    .form-group(required).col-md-12
                        div(
                            name="answer_text"
                            ng-model="flag_content"
                            ta-toolbar="{{taToolbarOptions}}"
                            text-angular
                            ta-max-text="{{editorContentMaxLength}}")

    div.modal-footer
        button.btn.btn-success(ng-click="saveFlag()" ng-disabled="!flag_content") Save
        | &nbsp;
        button.btn.btn-default(ng-click="closeDialog()") Cancel