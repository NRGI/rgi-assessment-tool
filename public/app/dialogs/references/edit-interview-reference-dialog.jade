.left-padding-lg.right-padding-lg
    .modal-header
        h3 Edit Interview Reference
    .modal-body
        .form-horizontal.top-padding-lg

            fieldset
                .row.bottom-padding-med
                    .col-md-12
                        rgi-calendar(ng-model="ref.contact_date", placeholder="Date accessed...")

                .row.bottom-padding-med
                    .col-md-12
                        div(
                        name="reference-comment"
                        placeholder="Enter relevant interview statements for this question (4,000 character limit) (required)..."
                        ng-model="ref.comment"
                        ta-toolbar="{{taToolbarOptions}}"
                        text-angular
                        ta-max-text="{{editorContentMaxLength}}")
        .row
            h4 Interviewee
            .row.left-padding-lg
                h5: b Name:
                | {{interviewee.firstName}} {{interviewee.lastName}}

        .spinner(ng-if="disable_button")
            .double-bounce1
            .double-bounce2

    .modal-footer
        .col-lg-6
            button.btn.btn-block.btn-success(
            ng-click="editReference(new_document)"
            ng-disabled="disable_button") Edit reference
        .col-lg-6
            button.btn.btn-block.btn-danger(ng-click="closeDialog()") Cancel