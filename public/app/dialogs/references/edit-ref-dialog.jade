div.left-padding-lg.right-padding-lg
    div.modal-header
        h3 Edit Document Reference
    div.modal-body
        .form-horizontal
            div
                .row
                    // TITILE
                    div.col-md-6
                        .form-group.pull-left
                            h5
                                b Title:
                            h5(ng-if="ref.document_ID.title")  {{ref.document_ID.title | ucfirst}}
                            h5(ng-if="!ref.document_ID.title")   N/A
                    // DOC TYPE
                    div.col-md-6
                        .form-group.pull-left
                            h5
                                b Type:
                            h5(ng-if="ref.document_ID.type")  {{ref.document_ID.type| ucfirst}}
                            h5(ng-if="!ref.document_ID.type")  N/A
                //- AUTHOR
                .row
                    div.col-md-6
                        .form-group.pull-left
                            h5
                                b Author(s):
                            h5(ng-repeat="author in ref.document_ID.authors" ng-if="ref.document_ID.authors")  {{author.first_name | ucfirst}} {{author.last_name| ucfirst}},
                            h5(ng-if="!ref.document_ID.authors")  N/A
                    // SOURCE
                    div.col-md-6
                        .form-group.pull-left
                            h5
                                b Source:
                            h5(ng-if="ref.document_ID.source")  {{ref.document_ID.source}}
                            h5(ng-if="!ref.document_ID.source")  N/A

                .row
                    // PUBLISHER
                    div.col-md-6
                        .form-group.pull-left
                            h5
                                b Publisher:
                            h5(ng-if="ref.document_ID.publisher")  {{ref.document_ID.publisher}}
                            h5(ng-if="!ref.document_ID.publisher")  N/A
                    // YEAR
                    div.col-md-6
                        .form-group.pull-left
                            h5
                                b Year:
                            h5(ng-if="ref.document_ID.year")  {{ref.document_ID.year}}
                            h5(ng-if="!ref.document_ID.year")  N/A


            .row.form-group
                // LOCATION IN DOC
                .pull-left.col-lg-6
                    input.form-control(
                    name="location"
                    type="text"
                    ng-model="ref.location"
                    autocomplete="off")

                // DATE ACCESSED
                .pull-left.col-lg-5.input-group
                    input.form-control(
                    type="text"
                    datepicker-popup="{{date_format}}"
                    placeholder="Date accessed..."
                    ng-model="ref.date_accessed"
                    is-open="status.opened"
                    max-date="date_max_limit"
                    datepicker-options="date_options"
                    close-text="Close")
                    span.input-group-btn
                        button.btn.btn-default(ng-click="calendarOpen($event)")
                            i.glyphicon.glyphicon-calendar

            //- COMMENT
            .row(id="comment").form-group
                .col-lg-12
                    textarea.form-control(
                    name="comment"
                    type="text"
                    placeholder="Comments..."
                    ng-model="ref.comment"
                    autocomplete="off")

        div.spinner(ng-if="disable_button")
            div.double-bounce1
            div.double-bounce2

    div.modal-footer
        .col-lg-6
            button.btn.btn-block.btn-success(
            ng-click="refEdit(new_document)"
            ng-disabled="disable_button") Edit reference
        .col-lg-6
            button.btn.btn-block.btn-danger(ng-click="closeDialog()") Cancel