//color variables
$extra-light-gray = #d7e0e2
$light-gray = #ddd
$gray = #ccc
$dark-gray = #555555

$dark = #333
$extra-dark = #000

$yellow = #ffd066

//margin & padding variables
$margin-regular = 10px

$padding-small = 6px
$padding-regular = 20px
$padding-large = 50px

body
  padding-top 61px

.navbar-header a.navbar-brand
  padding-top 30px
  margin-top -15px
  margin-bottom -1 * $padding-regular
  h6
    color $gray

footer
  padding-left 15px
  padding-right 15px
  p
    border-top 1px solid $extra-light-gray

.mapsicon
  height 100px

.navbar-form
  .form-group
    margin-left $margin-regular
  button
    margin-left $margin-regular

.page-container
  padding-top $padding-regular
  min-width 500px

.page-well
  margin-top $margin-regular
  margin-bottom $margin-regular
  margin-left $padding-large
  margin-right 70px

.filter-form
  padding-top $padding-regular
  padding-bottom $padding-regular

.table-responsive
  overflow-x auto

.left-padding-lg
  padding-left $padding-large
.top-padding-lg
  padding-top $padding-large
.right-padding-lg
  padding-right $padding-large
.bottom-padding-lg
  padding-bottom $padding-large

.left-padding-med
  padding-left $padding-regular
.top-padding-med
  padding-top $padding-regular
.right-padding-med
  padding-right $padding-regular
.bottom-padding-med
  padding-bottom $padding-regular

.margin-left-med
  margin-left $margin-regular
.margin-bottom-med
  margin-bottom $margin-regular

#toast-container
  top 70px

.btn-file
  position relative
  overflow hidden

.btn-file input[type=file]
  position absolute
  top 0
  right 0
  min-width 100%
  min-height 100%
  font-size 100px
  text-align right
  outline none
  cursor inherit
  display block
  opacity 0

.btn-col
  width 100%

.fileUpload
  position relative
  overflow hidden
  margin $margin-regular

input.upload
  position absolute
  top 0
  right 0
  margin 0
  padding 0
  font-size 20px
  cursor pointer
  opacity 0

.ngdialog.dialogwidth800 .ngdialog-content
  width 800px !important

//.ngdialog.dialog-background-blank::first-child
//  background rgba(0, 0, 0, 0) !important

.nav-tabs > li > a,
.nav-tabs > li > a:hover,
.nav-tabs > li > a:focus
  color $dark-gray
  background-color $yellow

.popover
  max-width 30% !important
.popover-content
  max-height 300px
  overflow-y scroll

.modal
  overflow visible

.modal:focus
  outline 0

.modal-content
  width 1600px

.ui-draggable-handle
  border-style solid
  border-color $extra-dark
  border-width thin


div.ta-scroll-window.ng-scope.ta-text.ta-editor.form-control
  margin-top $margin-regular

.wrap-content
  overflow-wrap break-word
  word-wrap break-word
  -ms-word-break break-all
  word-break break-word


.spinner
  width 40px
  height 40px
  position relative
  margin 100px auto

.double-bounce1, .double-bounce2
  width 100%
  height 100%
  border-radius 50%
  background-color $dark
  opacity 0.6
  position absolute
  top 0
  left 0
  -webkit-animation sk-bounce 2.0s infinite ease-in-out
  animation sk-bounce 2.0s infinite ease-in-out

.double-bounce2
  -webkit-animation-delay -1.0s
  animation-delay -1.0s

@-webkit-keyframes sk-bounce
  0%, 100%
    -webkit-transform scale(0.0)
  50%
    -webkit-transform scale(1.0)

@keyframes sk-bounce
  0%, 100%
    transform scale(0.0)
    -webkit-transform scale(0.0)
  50%
    transform scale(1.0)
    -webkit-transform scale(1.0)

table[ts-wrapper="ts-wrapper"] .tablesort-asc, table[ts-wrapper="ts-wrapper"] .tablesort-desc
  background-color: $light-gray

.assessment-actions
  min-width 110px

.assessment-list-supervisor
  .table
    thead
      tr
        td
          padding $padding-small
        th
          padding $padding-small
    tbody
      tr
        td
          padding $padding-small
        th
          padding $padding-small

  .dropdown
    .btn
      .caret
        margin-left 3px

  .dropdown-menu
    left auto
    right 18px
    li
      a
        cursor pointer
      a.inactive-link
        cursor not-allowed
        color $light-gray
      a.inactive-link:hover
        background-color transparent

.assessment-milestone-name
  font-weight 700
  padding-right 1em

.popover
  max-width 400px !important

.assessment-navigation
  .glyphicon.text-info
    cursor pointer
  .glyphicon.text-muted
    cursor default

.nav-tabs
  li:not(.active)
    cursor pointer
  li.active
    cursor default

.dropdown-toggle
  cursor pointer

label.thin-label
  font-weight normal
  margin-bottom 0

.hint
  cursor help

.deleted
  .row
    opacity 0.3

  &:hover
    .row.button-set
      opacity 1